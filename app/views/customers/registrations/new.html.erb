
<div class="container mt-5">
  <div class="row">
    <div class="col-4">
      <h2 class="bg-light mb-4 text-center">新規会員登録</h2>
    </div>
    <div class="col-9">
      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
        <table class="table table-borderless mt-5">
          <tr>
            <td>氏名</td>
            <td class="form-inline">
              <%= f.label "(姓)","",style: "width:100px;" %>
              <%= f.text_field :last_name, autofocus: true,style: "margin-right:20px;" %>
              <%= f.label "(名)","",style: "margin-right:20px;" %>
              <%= f.text_field :first_name, autofocus: true %>
            </td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td class="form-inline">
              <%= f.label "(セイ)","",style: "width:100px;" %>
              <%= f.text_field :kana_last_name, autofocus: true,style: "margin-right:10px;" %>
              <%= f.label "(メイ)","",style: "margin-right:15px;" %>
              <%= f.text_field :kana_first_name, autofocus: true %>
            </td>
          </tr>
          <tr>
            <td><%= f.label "郵便番号(ハイフンなし)","",style: "width:200px;" %></td>
            <td><%= f.text_field :postal_code, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label "住所","",style: "width: 200px;" %></td>
            <td><%= f.text_field :address, autofocus: true, size: 40 %></td>
          </tr>
          <tr>
            <td><%= f.label "電話番号(ハイフンなし)","",style: "width: 200px;" %></td>
            <td><%= f.text_field :phone_number, autofocus: true, size: 35 %></td>
          </tr>
          <tr>
            <td><%= f.label "メールアドレス","",style: "width:200px;" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", size: 35 %></td>
          </tr>
          <tr>
            <td>
              <%= f.label "パスワード(6文字以上)","",style: "width: 200px;" %></td>
            <td>
              <% if @minimum_password_length %>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", size: 35 %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label "パスワード(確認用)","",style: "width: 200px;" %>
            </td>
            <td>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 35 %>
            </td>
          </tr>
        </table>
        <table class="table table-borderless mt-5 kou">
          <td></td>
          <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </table>
        <% end %>
        <h5 class="col-4 bg-light mt-5">すでに登録済みの方</h5>
        <p class="col-5 text-center"><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
      </div>
    </div>
  </div>