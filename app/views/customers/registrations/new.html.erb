<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :first_name, "(姓)" %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :last_name, "(名)" %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :kana_first_name, "(セイ)" %><br />
    <%= f.text_field :kana_first_name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :kana_last_name, "(メイ)" %><br />
    <%= f.text_field :kana_last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :postal_code, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :address, "住所" %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :phone_number, "電話番号(ハイフンなし)" %><br />
    <%= f.text_field :phone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
