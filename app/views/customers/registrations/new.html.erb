<div class="container">
  <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
        <div class="mt-5">
  <h2 class="text-center">新規会員登録</h2>
  </div>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <p class="text-left mt-4">名前</p>

  <div class="form-inline">
    <%= f.label "(姓)","",style: "width:100px;" %>
    <%= f.text_field :last_name, autofocus: true,style: "margin-right:20px;" %>


    <%= f.label "(名)","",style: "margin-right:20px;" %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

<p class="text-left mt-3">フリガナ</p>

  <div class="form-inline">
    <%= f.label "(セイ)","",style: "width:100px;" %>
    <%= f.text_field :kana_last_name, autofocus: true,style: "margin-right:10px;" %>

    <%= f.label "(メイ)","",style: "margin-right:15px;" %>
    <%= f.text_field :kana_first_name, autofocus: true %>
  </div>

  <div class="mt-3">
    <%= f.label "メールアドレス","",style: "width:180px;" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 35 %>
  </div>

  <div class="mt-3">
    <%= f.label "郵便番号(ハイフンなし)","",style: "width:180px;" %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="mt-3">
    <%= f.label "住所","",style: "width: 180px;" %>
    <%= f.text_field :address, autofocus: true, size: 40 %>
  </div>

  <div class="mt-3">
    <%= f.label "電話番号(ハイフンなし)","",style: "width: 180px;" %>
    <%= f.text_field :phone_number, autofocus: true, size: 35 %>
  </div>

  <div class="mt-3">
    <%= f.label "パスワード(6文字以上)","",style: "width: 180px;" %>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", size: 35 %>
  </div>

  <div class="mt-3">
    <%= f.label "パスワード(確認用)","",style: "width: 180px;" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 35 %>
  </div>

        <div class="row">
        <div class="col-5"></div>
        <div class="actions">
          <div class="mt-5">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
  </div>
  </div>
<% end %>
<h4 class="text-center mt-5">既に登録済みの方</h4>
<p class="text-center"><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
</div>
</div>
</div>
