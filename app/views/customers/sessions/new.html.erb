<div class="container">
  <div class="row">
    <div class="col-xs-6 col-sm-4 col-md-4">
      <div class="mt-5">
        <h2 class="bg-light text-center">ログイン</h2>
      </div>
    </div>
  </div>
    <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
      <font color="red"><%= flash[:error] %></font>
      <div class="table-responsive">
        <table class="table table-borderless mt-5 text-nowrap">
          <div class="mt-5">
            <div class="col-xs col-sm-4 col-md">
              <tr>
                <td><%= f.label :メールアドレス %></td>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %></td>
              </tr>
            </div>
          </div>
          <div class="mt-3">
            <div class="col-xs col-sm-4 col-md">
              <tr>
                <td><%= f.label :パスワード %></td>
                <td><%= f.password_field :password, autocomplete: "current-password", size: 40 %></td>
              </tr>
            </div>
          </div>
       <div class="ml-5">
        <div class="actions ml-5">
          <div class="mt-5 ml-5">
            <tr>
            <td></td>
            <td><%= f.submit "ログイン", class: "btn btn-primary" %></td>
            </tr>
          </div>
        </div>
      </div>
    </table>
    </div>
      <% end %>
      <p class="col-xs-7 col-sm-4 col-md-4 bg-light mt-5">会員登録がお済みでない方</p>
    <p class="col-xs-10 col-sm-4 col-md-5 text-center"><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。</p>
</div>