<div class="container ">
  <div class="row">
    <div class="col-12 text-center mb-5">
      <h2 class="bg-light mb-4 mt-5">会員情報編集</h2>
    </div>
    <div class="col-9">
      <%= form_with model: @customer, local:true do |f| %>
        <table class="table">
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name,style: "margin-right:20px;" %><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :kana_last_name,style: "margin-right:20px;" %><%= f.text_field :kana_first_name %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, size: 60; %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email %></td>
          </tr>
        </table>
        <table class="table table-borderless mt-5">
          <td></td>
          <td><%= f.submit "編集内容を保存", class:"btn btn-lg btn-success" %></td>
          <td><%= link_to "退会する", withdrawal_path, method: :get, class: "btn btn-lg btn-danger" %></td>
        </table>
        <% end %>
      </div>
    </div>
  </div>
