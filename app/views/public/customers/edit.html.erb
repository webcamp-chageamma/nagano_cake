<div class="container mt-5">
  <div class="row">
    <div class="col-xs-6 col-sm-4 col-md-4">
      <h2 class="bg-light mb-4 text-center">会員情報編集</h2>
      <p class="text-center"><font color="red"><%= flash[:error] %></font></p>
    </div>
    <div class="col-xs-6 col-sm-4 col-md-9">
      <%= form_with model: @customer, local:true do |f| %>
      <div class="table-responsive">
        <table class="table table-borderless mt-5 text-nowrap">
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name%></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :kana_last_name%></td>
            <td><%= f.text_field :kana_first_name %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td colspan="3"><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td colspan="3"><%= f.text_field :address, size: 60; %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td colspan="3"><%= f.text_field :phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td colspan="3"><%= f.email_field :email, size: 50; %></td>
          </tr>
          <tr>
            <td></td>
          <td><%= f.submit "編集内容を保存", class:"btn btn-lg btn-success" %></td>
          <td><%= link_to "退会する", withdrawal_path, method: :get, class: "btn btn-lg btn-danger" %></td>
          </tr>
        </table>
        </div>
        <% end %>
      </div>
    </div>
  </div>
