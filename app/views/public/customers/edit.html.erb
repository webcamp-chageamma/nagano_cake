<h1>会員情報編集</h1>
  <%= form_with model: @customer, local:true do |f| %>
      <div class="form-group">
        <label for="customer.name">氏名</label>
        <%= f.text_field :last_name %><%= f.text_field :first_name %>
      </div>
      <label for="customer.kana_name">氏名</label>
        <%= f.text_field :kana_last_name %><%= f.text_field :kana_first_name %>
      </div>
      <div class="form-group">
        <label for="customer.postal_code">郵便番号</label>
          <%= f.text_field :postal_code %>
      </div>
      <div class="form-group">
        <label for="customer.address">住所</label>
          <%= f.text_field :address %>
      </div>
      <div class="form-group">
        <label for="customer.postal_code">電話番号</label>
          <%= f.text_field :phone_number %>
      </div>
      <div class="form-group">
        <label for="customer.email">メールアドレス</label>
          <%= f.text_field :phone_number %>
      </div>
      <%= f.submit "編集内容を保存", class:"btn btn-success" %>
      <%= link_to "退会する", withdrawal_path, class: "btn btn-outline-danger" %>
      <% end %>
