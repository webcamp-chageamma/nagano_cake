<div class="container mt-5">
  <div class="row">
    <div class="col-4">
      <h2 class="bg-light mb-4 text-center">会員情報編集</h2>
      <p class="text-center"><font color="red"><%= flash[:error] %></font></p>
    </div>
    <div class="col-9">
      <%= form_with model: @customer, local:true do |f| %>
        <table class="table table-borderless mt-5">
          <tr>
            <td>氏名</td>
            <td class="form-inline"><%= f.text_field :last_name,style: "margin-right:20px;" %><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td class="form-inline"><%= f.text_field :kana_last_name,style: "margin-right:20px;" %><%= f.text_field :kana_first_name %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, size: 60; %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email, size: 50; %></td>
          </tr>
        </table>
        <table class="table table-borderless mt-5 kou">
          <td></td>
          <td><%= f.submit "編集内容を保存", class:"btn btn-lg btn-success",style: "margin-left:130px;" %></td>
          <td><%= link_to "退会する", withdrawal_path, method: :get, class: "btn btn-lg btn-danger" %></td>
        </table>
        <% end %>
      </div>
    </div>
  </div>
