<div class="container">
  <div class="row">
    <div class="col-xs-6 col-sm-4 col-md-4 text-center">
      <h5 class="bg-light mb-4">注文確認画面</h5>
    </div>
  </div>
  <div class="row mx-auto">
    <div class="col-xs-10 col-md-8">
      <table class="table table-bordered table-font-size">
        <thead>
          <tr class="table-info">
            <th scope="col">商品名</th>
            <th scope="col">単価</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= attachment_image_tag cart_item.commodity, :image, format: 'jpeg', size: "70x52" %>
              <%= cart_item.commodity.name %>
            </td>
            <td><%= cart_item.commodity.add_tax_sales_price.to_s(:delimited) %></td>
            <td><%= cart_item.quantity %></td>
            <td><%= cart_item.sum_of_price.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4 col-lg-3 ml-auto">
      <table class="table table-bordered table-font-size ">
        <tbody>
          <tr>
            <th class="vertical-th-info" scope="row">送料</th>
            <td scope="col"><%= now_freight %></td>
          </tr>
          <tr>
            <th class="vertical-th-info" scope="row">商品合計</th>
            <td><%= @total.round.to_s(:delimited)%></td>
          </tr>
          <tr>
            <th class="vertical-th-info" scope="row">請求金額</th>
            <td><%= (@total.round.to_i + now_freight.to_i).to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mx-auto my-3">
    <div class="col-sm-9 col-md-2"><h5>支払方法</h5></div>
    <div class="col-sm-9 col-md-6"><%= @order.payment %></div>
  </div>
  <div class="row mx-auto my-3">
    <div class="col-sm-9 col-md-2"><h5>お届け先</h5></div>
    <div class="col-sm-9 col-md-6">
      〒<%= @order.order_destination_set %><br>
      <%= @order.destination_name %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form_with model: @order, local: true do |f| %>
        <%= f.hidden_field :destination_postal_code, :value => @order.destination_postal_code %>
        <%= f.hidden_field :destination_address, :value => @order.destination_address %>
        <%= f.hidden_field :destination_name, :value => @order.destination_name %>
        <%= f.hidden_field :payment, :value => @order.payment %>
        <%= f.hidden_field :sub_total, :value => @total %>
        <%= f.hidden_field :freight, :value => now_freight %>
        <%= f.hidden_field :total_due, :value => @total.round.to_i + now_freight.to_i %>
      　<div class="text-center"><%= f.submit "注文を確定する", class: "btn btn-primary" %></div>
      <% end %>
    </div>
  </div>
</div>