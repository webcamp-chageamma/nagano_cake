<%= render "layouts/errors", obj: destination %>
<%= form_with model: destination, local:true do |f| %>

<div class="row ml-2 mx-auto">
  <div class="col-sm-9 col-md-4 col-lg-3"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></div>
  <div class="col-sm-9 col-md-6 col-lg-6"><%= f.text_field :postal_code, placeholder: "0000000", class: "mb-2 form-control" %></div>
</div>
<div class="row ml-2 mx-auto">
  <div class="col-sm-10 col-md-4 col-lg-3"><%= f.label :place, "住所" %></div>
  <div class="col-sm-10 col-md-6 col-lg-6"><%= f.text_field :place, placeholder: "東京都渋谷区代々木神園町0-0", class: "mb-2 form-control" %></div>
</div>
<div class="row ml-2 mx-auto">
  <div class="col-sm-10 col-md-4 col-lg-3"><%= f.label :name, "宛名" %></div>
  <div class="col-sm-10 col-md-6 col-lg-6"><%= f.text_field :name, placeholder: "令和道子", class: "mb-2 form-control" %></div>
  <div class="col-sm-10 col-md-1 mr-auto mb-2 text-center">
    <%= f.submit button_text, class: "btn btn-success" %>
  </div>
</div>
<% end %>

