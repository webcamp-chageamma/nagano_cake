<div class='container py-5'>
  <div class='row'>
    <%= render 'layouts/genre_search', genres: @genres %>

    <div class='col-4 mt-5'>
      <%= attachment_image_tag @commodity,  :image, format: 'jpeg', size: "260x195" %>
    </div>
    <div class='col-6 mt-5'>
      <%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>
              <span class="commodity_name"> <%= @commodity.name %> </span>
            </th>
          </tr>
          <tr>
            <td>
              <span class="commodity_opinion"> <%= @commodity.opinion %> </span>
            </td>
          </tr>
          <tr>
            <td></td>
          </tr>
          <tr>
            <td>
              <span class="commodity_price"> ¥<%= @commodity.add_tax_sales_price.to_s(:delimited) %> </span>
              <span class="price"> (税込) </span>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.hidden_field :commodity_id, value: @commodity.id %>
              <%= f.number_field :quantity, min: 1, max: 100, include_blank: "個数選択"  %>
              <%= f.submit "カートに入れる", class: "btn btn-success" %>
            </td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>