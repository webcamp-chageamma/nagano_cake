<div class='container py-5'>
  <div class='row'>
    <div class='col-md-2 text-center'>
      <p>ジャンル検索</p>
    </div>
    <div class='col-10'>
      <div class='row'>
        <div class='col-md-5'>
          <%= attachment_image_tag @commodity, :image, :fill, 300, 225 %>
        </div>
        <div class='col-md-7 mt-2'>
          <h3><%= @commodity.name %></h3>
          <h6><%= @commodity.opinion %></h6>
          <br>
          <h4 class='mt-2'>¥<%= @commodity.add_tax_sales_price.to_s(:dalimited) %>(税込)</h4>
          <%= form_with model: @commodity do |f| %>
            <td><%= f.select :name, ['sample1', 'sample2', 'sample3'], {include_blank: '選択ボックス'}, class: 'sample mt-5' %></td>
            <td><%= f.submit "カートに入れる" , class: 'btn btn-success '%></td>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>