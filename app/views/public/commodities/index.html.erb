<div class='container mb-5'>
  <div class='row'>
    <%= render 'layouts/genre_search', genres: @genres %>

    <div class='col-md-10 col-sm-12 col-xs-4'>
      <h3>商品一覧<span class="body"> (全 <%= @commodity_count %> 件)</span></h3>
      <div class='row mt-4'>
        <% @commodities.each do |commodity| %>
          <div class="col-md-3 col-sm-4">
            <div class='commodity-image'>
              <%= link_to commodity_path(commodity.id) do %>
                <%= attachment_image_tag commodity, :image, format: 'jpg', class: "img-fluid"  %>
              <% end %>
            </div>
            <div class='commodity-name mt-1 mb-1'>
              <%= commodity.name %>
            </div>
            <div class='commodity-price mb-3'>
              ¥ <%= commodity.non_taxed_price %>
            </div>
          </div>
        <% end %>
      </div>
      <%= paginate @commodities %>
    </div>

  </div>
</div>