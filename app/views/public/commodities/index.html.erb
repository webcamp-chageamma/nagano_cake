<div class='container py-5'>
  <div class='row'>
    <div class='col-2  text-center'>
      <p>ジャンル検索</p>
    </div>
    <div class='col-10'>
      <h2>商品一覧 (全 <%= @commodities.count %> 件)</h2>
      <div class='row mt-4'>
        <% @commodities.each do |commodity| %>
          <div class='commodity col-md-3'>
            <div class='commodity-image'>
              <%= link_to commodity_path(commodity.id) do %>
                <%= attachment_image_tag commodity,  :image, format: 'jpeg', size: "220x165" %>
              <% end %>
              <p><%= commodity.name %></p>
              <p>￥<%= commodity.non_taxed_price.to_s(:delimited) %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>