<div class="container ">
  <div class="row">
    <div class="col-xs-6 col-sm-4 col-md-4 text-center">
      <h5 class="bg-light mb-4 mt-4"><%= @customer.name %>さんの会員詳細</h5>
    </div>
    <div class="col-xs-6 col-sm-4 col-md-9">
      <div class="table-responsive">
      <table class="table text-nowrap">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.kana_name %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @customer.is_deleted == "有効" %>
              <p class="text-success">有効</p>
            <% else %>
              <p class="text-danger">退会</p>
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-lg btn-success mt-5" %></td>
          <td><%= link_to "注文履歴一覧を見る", admin_root_path(customer_id: @customer.id, order_sort: 0), class: "btn btn-lg btn-primary mt-5" %></td>
        </tr>
      </table>
      </div>
    </div>
  </div>
</div>
