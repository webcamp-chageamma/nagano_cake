<div class="container">
  <div class="row">
    <div class="col-4 text-center">
      <h5 class="bg-light mb-4 mt-4"><%= @customer.name %>さんの会員情報編集</h5>
      <p class="text-center"><font color="red"><%= flash[:error] %></font></p>
    </div>
    <div class="col-9">
        <%= form_with model: @customer, url: admin_customer_path(@customer.id), local:true do |f| %>
        <table class="table">
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td class="form-inline"><%= f.text_field :last_name,style: "margin-right:20px;" %><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td class="form-inline"><%= f.text_field :kana_last_name,style: "margin-right:20px;" %><%= f.text_field :kana_first_name %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, size: 60; %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <%= f.radio_button :is_deleted, "有効" %>
              <%= f.label :is_deleted_false, '有効' %>
              <%= f.radio_button :is_deleted, "退会" %>
              <%= f.label :is_deleted_true, '退会' %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "変更を保存", class:"btn btn-lg btn-success" %></td>
            
          </tr>
        </table>
        <% end %>
      </div>
    </div>
  </div>