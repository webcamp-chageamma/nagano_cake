<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
  		<h1>商品編集</h1>
  		   <%= form_with model: @commodity, url: admin_commodity_path, local:true do |f| %>
        <div class="form-group">
          <%= f.label :image, "商品画像" %>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-group">
          <%= f.label :name, "商品名" %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :opinion, "商品説明" %>
          <%= f.text_area :opinion %>
        </div>
        <div class="form-group">
          <%= f.label :genre_id, "ジャンル" %>
          <%= f.text_field :genre_id %>
        </div>
        <div class="form-group">
          <%= f.label :non_taxed_price, "税抜価格" %>
          <%= f.text_field :non_taxed_price %>円
        </div>
        <div class="form-group">
          <%= f.label :sale_status, "販売ステータス" %>
          <%= f.radio_button :sale_status, :good %>
          <%= f.label :sale_status_good, '販売中' %>
          <%= f.radio_button :sale_status, :bad %>
          <%= f.label :sale_status_bad, '販売停止' %>
        </div>
        <div class="form-group">
          <%= f.submit '変更を保存', class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>