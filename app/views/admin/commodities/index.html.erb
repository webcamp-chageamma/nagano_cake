
<table class='table table-hover table-inverse'>
  <h6>商品一覧</h6>
  <thead>
    <tr>
      <th></th>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @commodities.each do |commodity| %>
      <tr>
        <td></td>
        <td><%= commodity.id %></td>
        <td><%= link_to commodity.name, admin_commodity_path(commodity.id), class: "commodity_#{commodity.id}" %></td>
        <td><%= commodity.non_taxed_price %> 円</td>
        <td><%= commodity.genre_id %></td>
        <td><%= commodity.sale_status %></td>
      </tr>
    <% end %>
  </tbody>
</table>