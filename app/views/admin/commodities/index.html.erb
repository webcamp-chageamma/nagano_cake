<div class="container">
  <div class="row">
    <div class="col-2 text-center">
      <h5 class="bg-light mt-4">商品一覧</h5>
    </div>

    <!--商品-->
    <div class="col-12">
      <table class="table table-inverse">

        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜き価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @commodities.each do |commodity| %>
          <tr>
            <td><%= commodity.id %></td>
            <td><%= link_to commodity.name, admin_commodity_path(commodity.id), class: "commodity_#{commodity.id}" %></td>
            <td><%= commodity.non_taxed_price %> 円</td>
            <td><%= commodity.genre.name %></td>
            <td><%= commodity.sale_status %></td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>

  </div>
</div>
