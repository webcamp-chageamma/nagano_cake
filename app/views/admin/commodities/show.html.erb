<div class="container">
   <div class="row">
    <div class="col-2 text-center">
       <h5 class="bg-light">商品詳細</h5>
    </div>
  </div>
  <div class="row mt-5 mx-auto">
    <div class='col-4'>
      <%= attachment_image_tag @commodity,  :image, format: 'jpeg', size: "260x195" %>
    </div>
    <div class='col-6'>
      <table class="table table-borderless">
        <tbody class="title">
          <tr>
            <td> 商品名 </td>
            <td class="body"><%= @commodity.name %></td>
          </tr>
          <tr class="mt-3">
            <td> 商品説明 </td>
            <td class="body"><%= @commodity.opinion %></td>
          </tr>
          <tr>
            <td> ジャンル </td>
            <td class="body"><%= @commodity.genre.name %></td>
          </tr>
          <tr>
            <td>
              販売価格 <br>
              (税抜価格)
            </td>
            <td class="body"><%= @commodity.add_tax_sales_price.to_s(:delimited) %> (<%= @commodity.non_taxed_price.to_s(:delimited) %>) 円 </td>
          </tr>
          <tr>
            <td> 販売ステータス </td>
            <td class="body">
              <% if @commodity.sale_status == "販売中" %>
                <p class="status_good">販売中</p>
              <% else %>
                <p class="status-bad">販売停止中</p>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class='btn-group mx-auto '>
      <%= link_to '編集する', edit_admin_commodity_path(@commodity.id), class: "btn btn-success btn-lg edit_commodity_#{@commodity.id}", data: {"turbolinks"=>false} %>
    </div>
  </div>
</div>