<table class="table table-borderless">
  <tbody class="title">
     <%= form_with model: commodity, url: path,  local:true do |f| %>
      <tr>
        <td><%= f.label :image, "商品画像" %></td>
        <td><%= f.attachment_field :image %></td>
      </tr>
      <tr>
        <td><%= f.label :name, "商品名" %></td>
        <td><%= f.text_field :name, size: "35x20" %></td>
      </tr>
      <tr>
        <td><%= f.label :opinion, "商品説明" %></td>
        <td><%= f.text_area :opinion, size: "35x5" %></td>
      </tr>
      <tr>
        <td><%= f.label :genre_id, "ジャンル" %></td>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
      </tr>
      <tr>
        <td><%= f.label :non_taxed_price, "税抜価格" %></td>
        <td><%= f.text_field :non_taxed_price, size: "35x20" %> 円</td>
      </tr>
      <tr>
        <td><%= f.label :sale_status, "販売ステータス" %></td>
        <td>
          <%= f.radio_button :sale_status, "販売中" %>
          <%= f.label :sale_status_0, '販売中' %>
          <%= f.radio_button :sale_status, "販売停止"%>
          <%= f.label :sale_status_1, '販売停止' %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td>
          <%= f.submit commodity_button, class: 'btn btn-success btn-lg' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>