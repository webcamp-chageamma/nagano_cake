<div class="container">
  <h5>ジャンル一覧・追加</h5>
  <!--エラーメッセージ-->
  <% if @genre.errors.any? %>
    <%= @genre.errors.count %>件のエラーが発生しました
    <% @genre.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  
  <div class="row">
    <%= form_with url:admin_genres_path, model:@genre, local:true do |f| %>
      <div class="form-group">
        <table>
          <tr>
            <th><%= f.label :name, "ジャンル名" %></th>
            <th><%= f.text_field :name %></th>
            <th><%= f.submit "新規登録", class: "btn btn-sm btn-success" %></th>
          </tr>
        </table>
      </div>
    <% end %>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>