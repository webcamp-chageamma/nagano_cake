<div class="container">
  <div class="row">
    <div class="col-3 text-center">
      <h5 class="bg-light mb-4">ジャンル一覧・追加</h5>
      <!--エラーメッセージ-->
      <% if @genre.errors.any? %>
        <%= @genre.errors.count %>件のエラーが発生しました
        <% @genre.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="mt-4 mb-4">
    <%= form_with url:admin_genres_path, model:@genre, local:true do |f| %>
     <div class="row">
      <div class="col-1.5">
        <div class="form-group">
          <%= f.label :name, "ジャンル名" %>
        </div>
      </div>
      <div class="col-2">
        <div class="form-group">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="col-2">
        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row">
    <table class="table" style="width: 30%;">
      <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>