<div class="container">
  <div class="row">
    <div class="col-xs-6 col-sm-4 col-md-4 text-center">
      <h5 class="bg-light mb-4">ジャンル一覧・追加</h5>
      <!--エラーメッセージ-->
      <% if @genre.errors.any? %>
        <%= @genre.errors.count %>件のエラーが発生しました
        <% @genre.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row mt-4 mb-4">
    <%= form_with url:admin_genres_path, model:@genre, local:true do |f| %>
      <div class="table-responsive">
        <table class="table text-nowrap table-borderless">
          <tbody>
            <td class="col-xs-4 col-sm-4 col-md-2">
              <%= f.label :name, "ジャンル名" %>
            </td>
            <td class="col-xs-4 col-sm-4 col-md-2">
              <%= f.text_field :name, size: 15 %>
            </td>
            <td class="col-xs-4 col-sm-4 col-md-2">
              <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
            </td>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-xs-8 col-sm-10 col-md-4">
      <div class="table-responsive">
        <table class="table text-nowrap">
          <thead class="thead-light">
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>