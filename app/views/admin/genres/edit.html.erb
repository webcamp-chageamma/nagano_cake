<div class="container ">
  <div class="row">
    <div class="col-3 text-center">
      <h5 class="bg-light mb-4">ジャンル編集</h5>
      <% if @genre.errors.any? %>
        <%= @genre.errors.count %>件のエラーが発生しました
        <% @genre.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="mt-4 mb-4">
    <%= form_with url:admin_genre_path, model:@genre, local:true do |f| %>
      <div class="row">
        <div class="col-1.5">
          <div class="form-group">
            <%= f.label :name, "ジャンル名" %>
          </div>
        </div>
        <div class="col-2">
          <div class="form-group">
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="col-2">
          <div class="form-group">
            <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
