<div class="container">
  <div class="row">
    <div class="col-xs-6 col-sm-4 col-md-4">
      <div class="mt-5">
        <h2 class="text-left">管理者ログイン</h2>
      </div>
    </div>
  </div>
  <div class="row">
    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
      <font color="red"><%= flash[:error] %></font>
      <div class="mt-5">

      <div class="col-xs- col-sm-4 col-md">
        <%= f.label :メールアドレス,"",style: "width:12vw;" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %>
      </div>

      <div class="mt-3">
        <div class="col-xs col-sm-4 col-md">
          <%= f.label :パスワード,"",style: "width:12vw;" %>
          <%= f.password_field :password, autocomplete: "current-password", size: 40 %>
        </div>
      </div>
    </div>
    <div class="ml-5">
      <div class="actions ml-5">
        <div class="mt-5 ml-5">
          <%= f.submit "ログイン", class: "btn btn-primary ml-5" %>
        </div>
      </div>
      </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
