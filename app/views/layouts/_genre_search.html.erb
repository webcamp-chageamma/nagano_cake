<div class="col-xs-3 cl-sm-6 col-md-2 table-borderless table-hover">
  <table class="table table-bordered genre-table">
    <thead class="thead-light">
      <tr>
        <th>ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
      <% genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name, search_path('search[value]': genre.id) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>